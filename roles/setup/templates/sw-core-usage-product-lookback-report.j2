---
apiVersion: metering.openshift.io/v1alpha1
kind: Report
metadata:
  labels:
    subscription-watch: "true"
  name: sw-core-usage-product-lookback-{{ current_year_month }}
spec:
  query: sw-core-usage-product-lookback
  inputs:
    - name: SubscriptionWatchProductUsageReportName
      value: sw-core-usage-product-{{ current_year_month }}
  reportingEnd: '{{ report_end_year }}-{{ report_end_month }}-02T00:00:00Z'
  schedule:
    period: hourly
  overwriteExistingData: true